---
const skillCategories = [
  {
    name: "Frontend",
    skills: [
      { name: "HTML5", level: 90 },
      { name: "CSS3", level: 85 },
      { name: "JavaScript", level: 90 },
      { name: "TypeScript", level: 80 },
      { name: "React", level: 85 }
    ]
  },
  {
    name: "Backend",
    skills: [
      { name: "Node.js", level: 75 },
      { name: "Express", level: 70 },
      { name: "MongoDB", level: 65 },
      { name: "SQL", level: 60 }
    ]
  },
  {
    name: "Design",
    skills: [
      { name: "Figma", level: 85 },
      { name: "Adobe XD", level: 75 },
      { name: "Photoshop", level: 70 },
      { name: "UI/UX", level: 80 }
    ]
  }
];

const tools = [
  "VS Code", "Git", "GitHub", "npm", "Webpack", "Babel",
  "ESLint", "Prettier", "Postman", "Docker", "Adobe Creative Suite"
];
---

<section id="skills" class="skills">
  <div class="container">
    <h2 class="section-title animate-on-scroll">My Skills</h2>
    
    <div class="skills-tabs">
      <div class="tabs-header animate-on-scroll">
        {skillCategories.map((category, index) => (
          <button 
            class={`tab-button ${index === 0 ? 'active' : ''}`} 
            data-tab={category.name.toLowerCase()}
          >
            {category.name}
          </button>
        ))}
      </div>
      
      <div class="tabs-content">
        {skillCategories.map((category, index) => (
          <div 
            class={`tab-content ${index === 0 ? 'active' : ''}`} 
            id={`tab-${category.name.toLowerCase()}`}
          >
            <div class="skills-list animate-on-scroll">
              {category.skills.map(skill => (
                <div class="skill-item">
                  <div class="skill-info">
                    <span class="skill-name">{skill.name}</span>
                    <span class="skill-percentage">{skill.level}%</span>
                  </div>
                  <div class="skill-bar">
                    <div class="skill-progress" style={`width: ${skill.level}%`}></div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="tools-section animate-on-scroll">
      <h3>Tools & Technologies</h3>
      <div class="tools-list">
        {tools.map(tool => (
          <span class="tool">{tool}</span>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  // Skills tab functionality
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');
  
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Update active button
      tabButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      // Update active content
      const tab = button.getAttribute('data-tab');
      tabContents.forEach(content => {
        content.classList.remove('active');
        if (content.id === `tab-${tab}`) {
          content.classList.add('active');
        }
      });
    });
  });
  
  // Animate skill bars when in view
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const skillBars = entry.target.querySelectorAll('.skill-progress');
        skillBars.forEach((bar, index) => {
          setTimeout(() => {
            const barElement = bar as HTMLElement;
            barElement.style.transition = 'width 1s ease';
            barElement.style.width = barElement.style.width;
          }, index * 100);
        });
      }
    });
  }, { threshold: 0.5 });
  
  document.querySelectorAll('.skills-list').forEach(list => {
    observer.observe(list);
  });
</script>

<style>
  .skills {
    background-color: var(--color-bg);
  }
  
  .skills-tabs {
    margin-bottom: var(--space-6);
  }
  
  .tabs-header {
    display: flex;
    justify-content: center;
    margin-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border);
  }
  
  .tab-button {
    background: none;
    border: none;
    padding: var(--space-3);
    font-size: 1.1rem;
    color: var(--color-text);
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
  }
  
  .tab-button::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-secondary);
    transition: width 0.3s ease;
  }
  
  .tab-button:hover {
    color: var(--color-primary);
  }
  
  .tab-button.active {
    color: var(--color-secondary);
  }
  
  .tab-button.active::after {
    width: 100%;
  }
  
  .tab-content {
    display: none;
  }
  
  .tab-content.active {
    display: block;
    animation: fadeIn 0.5s ease;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .skills-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-4);
  }
  
  .skill-item {
    margin-bottom: var(--space-3);
  }
  
  .skill-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-1);
  }
  
  .skill-name {
    font-weight: 500;
  }
  
  .skill-percentage {
    color: var(--color-accent);
  }
  
  .skill-bar {
    height: 6px;
    background-color: var(--color-border);
    border-radius: 3px;
    overflow: hidden;
  }
  
  .skill-progress {
    height: 100%;
    background-color: var(--color-primary);
    width: 0;
  }
  
  .tools-section {
    margin-top: var(--space-6);
    text-align: center;
  }
  
  .tools-section h3 {
    margin-bottom: var(--space-4);
  }
  
  .tools-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    justify-content: center;
  }
  
  .tool {
    background-color: var(--color-card);
    padding: var(--space-2) var(--space-3);
    border-radius: 30px;
    font-size: 0.9rem;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .tool:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
  }
  
  @media (max-width: 768px) {
    .tabs-header {
      flex-wrap: wrap;
    }
    
    .tab-button {
      flex: 1 0 auto;
      text-align: center;
      padding: var(--space-2);
    }
    
    .skills-list {
      grid-template-columns: 1fr;
    }
  }
</style>